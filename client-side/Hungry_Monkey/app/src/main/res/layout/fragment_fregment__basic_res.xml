<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible">


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        tools:context="com.example.shanijoffe.hungry_monkey.AdvancedSearchFragment">

        <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:visibility="visible">


            <LinearLayout
                android:id="@+id/freg1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:visibility="visible">

                <Button
                    android:id="@+id/Advnced_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/buttonstylesselector"
                    android:elevation="6dp"
                    android:fontFamily="@font/danafont"
                    android:text="הצג חיפוש מתקדם "
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/adv_leyout"
                    android:layout_width="match_parent"
                    android:layout_height="316dp"
                    android:orientation="vertical"
                    android:paddingTop="25dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/lbl_distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/danafont"
                        android:gravity="right"
                        android:text="בחר רדיוס:"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:visibility="invisible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:weightSum="4">

                        <TextView
                            android:id="@+id/textMax5"
                            android:layout_width="43dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/danafont"
                            android:gravity="right"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <com.crystal.crystalrangeseekbar.widgets.CrystalSeekbar
                            android:id="@+id/sk_dis"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="2"
                            android:visibility="visible"
                            app:bar_color="#61616C"
                            app:bar_highlight_color="#61616C"
                            app:data_type="_integer"
                            app:max_value="150"
                            app:min_value="0"
                            app:steps="5" />

                        <TextView
                            android:id="@+id/textMin5"
                            android:layout_width="59dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/danafont"
                            android:gravity="left"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/adv_leyout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="25dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/lbl_price_range"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/danafont"
                            android:gravity="right"
                            android:text="בחר טווח מחיר :"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:visibility="invisible" />

                        <LinearLayout
                            android:id="@+id/layout_pricerange"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:visibility="visible"
                            android:weightSum="4">

                            <TextView
                                android:id="@+id/textMin1"
                                android:layout_width="59dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/danafont"
                                android:gravity="left"
                                android:textStyle="bold" />

                            <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                                android:id="@+id/rangeSeekbar1"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="2"
                                app:bar_color="#61616C" />

                            <TextView
                                android:id="@+id/textMax1"
                                android:layout_width="81dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/danafont"
                                android:gravity="right"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/adv_leyout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="25dp"
                        android:visibility="invisible">

                        <TextView
                            android:id="@+id/lbl_kosher"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/danafont"
                            android:gravity="right"
                            android:text="בחר סוג כשרות "
                            android:textColor="#000000"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="visible">


                            <Spinner
                                android:id="@+id/sp_kosher"
                                android:layout_width="140dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/txtv_kosher"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/edittextstyle"
                                android:fontFamily="@font/danafont"
                                android:paddingLeft="10dp"
                                android:text="כשרות"
                                android:textColor="#000000"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="visible">

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</ScrollView>

