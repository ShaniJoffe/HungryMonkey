	log: 'error'
});

	
	
exports.counter = (nameOfIndex,type) =>

esClient.count({
  index: nameOfIndex,
  type:type,
  body: {
    query: {
		 match_all: {}
    }
  }
}).then( function (response) {
	var counter=response.count;
	console.log("balls");
	console.log("counter= "+response.count);
	res.send(counter); 
});

	