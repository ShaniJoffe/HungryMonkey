<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_new"

    tools:contex=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

       >
        <TextView
            android:id="@+id/welcome_txt"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:autoSizeTextType="none"
            android:background="@drawable/edittextstyle"
            android:backgroundTintMode="src_atop"
            android:fontFamily="monospace"
            android:gravity="center_vertical|center"
            android:includeFontPadding="true"
            android:shadowColor="@android:color/black"
            android:text="welcome to Hungrey Monkey"
            android:textColor="@android:color/black"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="ברוכים הבאים לHUNGREY MONKEY  " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <SearchView
                android:id="@+id/DishSearch"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:layout_marginTop="20dp"
                android:background="#CC999999"
                android:hint="הכנס/י שם מנה "
                android:paddingTop="10dp"></SearchView>

            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"></FrameLayout>

            <!--<FrameLayout-->
            <!--android:id="@+id/right_frame"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1">-->

            <!--</FrameLayout>-->

        </LinearLayout>

    </LinearLayout>



</ScrollView>



























