<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_new"

    tools:contex=".MainActivity">

    <LinearLayout
        android:id="@+id/search_flag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center|fill"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcome_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextstyle"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|center"
            android:includeFontPadding="true"
            android:shadowColor="@android:color/black"
            android:textColor="#9c7f5f"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/home_btn"
            android:layout_width="149dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="16dp"
            android:src="@drawable/tmp_logo"
            android:text="חזרהvvv לעמוד ראשי "
            app:backgroundTint="@color/creame"
            app:fabSize="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/sss"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="false"
                android:textColor="@android:color/white"
                android:visibility="invisible" />

            <!--<RatingBar-->
            <!--android:id="@+id/ratingBar"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->

            <SearchView
                android:id="@+id/DishSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:background="#CCffffcc"
                android:gravity="fill_vertical|center_horizontal|center"
                android:hint="הכנס/י שם מנה "
                android:padding="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

            </SearchView>


            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

            </FrameLayout>


        </LinearLayout>


    </LinearLayout>


</ScrollView>