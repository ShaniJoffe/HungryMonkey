<!doctype html5>
<html dir="rtl" lang="he">


<head>

  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href ="/assets/styles.css" rel="stylesheet" type="text/css" href="style.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <link href="https://fonts.googleapis.com/css?family=Poiret+One" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Amatic+SC" rel="stylesheet">
  <script>
  var restid = '<%=restid %>';
  </script>
  <!----><script type="text/javascript" src="/client/controllerApi.js"></script>

</head>
<body >
  <div class="top-container">
    <img src="cover.jpg">
    <h1 style="color:#FFFFFF ;font-size:80px ;font-style:bold;  font-weight: 900;"  >Hungry Monkey</h1>
    <div class="inHeader">
      <p style="color:#FFFFFF">
      </p>
    </div>

  </div>
  <div class="header" id="myHeader">
    <h3 style="text-align:center; font-size:40px;   font-family: 'Amatic SC';cursive;"> הזנת פרטי התפריט<h3>
    </div>

    <div class="container">
      <div class="content">
        <form  id="set-menu" method="POST" enctype="multipart/form-data" onsubmit="event.preventDefault();"action="/api/v1/set_menu/<%=restid %>">
          <div class="fieldList" >
            <label   for='menu[0][dish_cat]'>קטגוריה</label>
            <input  class='form-control'  style="radius" type="text" name='menu[0][dish_cat]' placeholder="קטגוריה">
            <label   for='menu[0][dish_name]'>מנה</label>
            <input class="form-control" type="text" name='menu[0][dish_name]' placeholder="שם המנה">
            <label    for='menu[0][dish_description]'>תיאור</label>
            <input  class="form-control"  type="text" name='menu[0][dish_description]'placeholder="תיאור המנה">
            <label   for='menu[0][dish_price]'>מחיר</label>
            <input class="form-control"  type="text" name='menu[0][dish_price]'placeholder="מחיר המנה">
            <label >תמונה</label>
            <input  class="form-control" type="file" id="image_file" name='menu[0][imgUploader]'>
            <img  id="img0" src="#" />
          </div>
          <div style="text-align: center;">
            <input type="submit" id = "done_button" class="btn btn-default" name="submit" value="סיום" >
            <button id='add_field_button' type='button' class="btn icon-btn btn-success" href="#"><span class="glyphicon btn-glyphicon glyphicon-plus img-circle text-success"></span>הוסף</button>
            <button class = "showMenu" >הפק תפריט</button>
          </div>
        </form>
      </div>
      <div class="ModalContainer">
              <!--  Modal   -->
        <div class="modal fade" id="myModal" role="dialog">
          <div class="modal-dialog">
            <!--   Modal content -->
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3 style="text-align:center; font-size:40px;   font-family: 'Amatic SC';cursive;"> תפריט המסעדה<h3>
              </div>
              <div class="modal-body">
              </div>
              <div class="modal-footer">
                <button type="button" name="in_reserve1" id="confirm-cancel-button" class="btn btn-default" data-dismiss="modal">סגור</button>
                <button type="button" name="in_reserve2" id="confirm-save-button" class="btn btn-primary" data-dismiss="modal">הזן תפריט</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>


    <script>
    window.onscroll = function() {myFunction()};

    var header = document.getElementById("myHeader");
    var sticky = header.offsetTop;

    function myFunction() {
      if (window.pageYOffset >= sticky) {
        header.classList.add("sticky");
      } else {
        header.classList.remove("sticky");
      }
    }
    </script>
  </body>



  </html>
